<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hero_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/h_hero_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Text"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/h_average_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Text"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/chw"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/h_win_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Text"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/sw"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/h_selection_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="Text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ПП: "
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/h_win_rate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="СП: "
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/h_average_position"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ЧВ: "
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/h_selection_frequency"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>